%isolated term
%#1 - Optional. Space between node and grouping line. Default=0
%#2 - node
%#3 - color
\newcommand{\implicantsol}[3][0]{
\draw[rounded corners=3pt, color=#3, opacity=0.8, semithick] ($(#2.north west)+(135:#1)$) rectangle ($(#2.south east)+(-45:#1)$);
}

%internal group
%#1 - Optional. Space between node and grouping line. Default=0
%#2 - top left node
%#3 - bottom right node
%#4 - color
\newcommand{\implicant}[4][0]{
\draw[rounded corners=3pt, color=#4, opacity=0.8, semithick] ($(#2.north west)+(135:#1)$) rectangle ($(#3.south east)+(-45:#1)$);
}

%group lateral borders
%#1 - Optional. Space between node and grouping line. Default=0
%#2 - top left node
%#3 - bottom right node
%#4 - color
\newcommand{\implicantcostats}[4][0]{
\draw[rounded corners=3pt, color=#4, opacity=0.8, semithick] ($(rf.east |- #2.north)+(90:#1)$)-| ($(#2.east)+(0:#1)$) |- ($(rf.east |- #3.south)+(-90:#1)$);
\draw[rounded corners=3pt, color=#4, opacity=0.8, semithick] ($(cf.west |- #2.north)+(90:#1)$) -| ($(#3.west)+(180:#1)$) |- ($(cf.west |- #3.south)+(-90:#1)$);
}

%group top-bottom borders
%#1 - Optional. Space between node and grouping line. Default=0
%#2 - top left node
%#3 - bottom right node
%#4 - color
\newcommand{\implicantdaltbaix}[4][0]{
\draw[rounded corners=3pt, color=#4, opacity=0.8, semithick] ($(cf.south -| #2.west)+(180:#1)$) |- ($(#2.south)+(-90:#1)$) -| ($(cf.south -| #3.east)+(0:#1)$);
\draw[rounded corners=3pt, color=#4, opacity=0.8, semithick] ($(rf.north -| #2.west)+(180:#1)$) |- ($(#3.north)+(90:#1)$) -| ($(rf.north -| #3.east)+(0:#1)$);
}

%group corners
%#1 - Optional. Space between node and grouping line. Default=0
%#2 - color
\newcommand{\implicantcantons}[2][0]{
\draw[rounded corners=3pt, color=#2, opacity=0.8, semithick] ($(rf.east |- 0.south)+(-90:#1)$) -| ($(0.east |- cf.south)+(0:#1)$);
\draw[rounded corners=3pt, color=#2, opacity=0.8, semithick] ($(rf.east |- 8.north)+(90:#1)$) -| ($(8.east |- rf.north)+(0:#1)$);
\draw[rounded corners=3pt, color=#2, opacity=0.8, semithick] ($(cf.west |- 2.south)+(-90:#1)$) -| ($(2.west |- cf.south)+(180:#1)$);
\draw[rounded corners=3pt, color=#2, opacity=0.8, semithick] ($(cf.west |- 10.north)+(90:#1)$) -| ($(10.west |- rf.north)+(180:#1)$);
}

